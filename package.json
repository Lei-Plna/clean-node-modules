{
  "name": "@dplei/clean-node-modules-cli",
  "version": "1.1.3",
  "description": "A command-line tool to recursively delete all node_modules folders in the current directory and subdirectories.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "bin": {
    "clean-modules": "dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "prepare": "npm run build",
    "dev": "tsup && node ./dist/index.js",
    "devlink": "pnpm link --global --dir .",
    "release": "npm version patch && npm publish",
    "build:i18n": "tsup --config tsup.scripts.config.ts",
    "sync:i18n": "npm run build:i18n && node scripts-dist/i18n-sync.js"
  },
  "keywords": [
    "node",
    "node_modules",
    "cleanup",
    "cli",
    "npm"
  ],
  "author": "Dplei <peiplna12@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.4.1",
    "glob": "^11.0.1",
    "i18next": "^25.1.2",
    "i18next-fs-backend": "^2.6.0",
    "log-update": "^6.1.0",
    "prompts": "^2.4.2",
    "rimraf": "^6.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.15.11",
    "@types/prompts": "^2.4.9",
    "fs-extra": "^11.3.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dplei/clean-node-modules.git"
  },
  "bugs": {
    "url": "https://github.com/dplei/clean-node-modules/issues"
  },
  "readme": "README.md",
  "homepage": "https://github.com/dplei/clean-node-modules#readme",
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
